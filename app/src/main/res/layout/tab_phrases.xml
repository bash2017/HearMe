<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.swing.app.hearme.PhrasesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="28sp"
            android:text="Frases Típicas" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnPhr1Tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Hola, ¿Cómo estas?"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:onClick="imageClick"/>

                <Button
                    android:id="@+id/btnPhr2Tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Adios, nos vemos luego"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"/>

                <Button
                    android:id="@+id/btnPhr3Tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="¿Cómo te ha ido en el día?"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"/>

                <Button
                    android:id="@+id/btnPhr4Tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Buenas tardes"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"/>

                <Button
                    android:id="@+id/btnPhr5Tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Buenas noches"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"/>

                <Button
                    android:id="@+id/btnPhr6Tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Que tengas un buen día"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:background="@drawable/a" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:background="@drawable/a"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:background="@drawable/a" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:background="@drawable/a"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>

